{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"automerge": true,
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": "package.json",
			"matchStrings": [
				"\"packageManager\": \"bun@(?<currentValue>.*?)\""
			],
			"depNameTemplate": "oven-sh/bun",
			"datasourceTemplate": "github-releases"
		}
	]
}
