root = true

[*]
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space

[*.fs]
indent_style = space

[*.cs]
indent_size = 4

# I'll die on this hill
csharp_new_line_before_open_brace = namespace, types
dotnet_sort_system_directives_first = true

# We manually build a single service provider
dotnet_diagnostic.ASP0000.severity = none
